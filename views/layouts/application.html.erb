<%
    def link_to(name, url)
        return "<a href='#{url}'>#{name}</a>"
    end
%>
<html>
  <body>
    <h1>You're using a layout</h1>
    <p>
      <h3> I'm a header</h3>
      <p>Put things in the header</p>
      <a href='me.html'>Me</a>
      <a href="http://www.reddit.com">Reddit</a>
      <%= link_to("Google", "http://www.google.com") %>

    </p>
    <hr />
    <div>
      <%= yield %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <p>Put things in the footer</p>
      <a href="http://www.cnn.com">CNN</a>
      <%= link_to("Metacritic", "http://www.metacritic.com") %>
    </div>
  </body>
</html>